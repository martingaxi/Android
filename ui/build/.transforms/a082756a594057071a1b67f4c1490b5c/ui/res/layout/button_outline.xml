<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_primary_outline_control"
            style="@style/Widget.Coppel.Button.Outline.White"
            app:cornerRadius="@dimen/corner_radius"
            app:strokeWidth="@dimen/stroke_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            app:strokeColor="@color/colorAzulDark"
            app:backgroundTint="@color/colorBlanco"
            android:background="@drawable/round_button_primary_outline"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:rippleColor="@color/colorAzulBtnRipple"/>
</merge>