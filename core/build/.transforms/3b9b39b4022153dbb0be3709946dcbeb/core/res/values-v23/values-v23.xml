<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="Theme.Coppel" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor" ns1:ignore="NewApi">@color/colorAzulDark</item>
        <item name="android:navigationBarColor" ns1:ignore="NewApi">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" ns1:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" ns1:ignore="NewApi">?colorControlHighlight</item>

        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
        <item name="colorControlHighlight">@color/md_grey_300</item>

        <item name="toolbarTheme">@style/ThemeOverlay.Coppel.Toolbar</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
    </style>
    <style name="Theme.Coppel.Blue" parent="Theme.Coppel">
        <item name="colorPrimary">@color/colorAzulDark</item>
        <item name="colorPrimaryVariant">@color/colorAzulDarker</item>
        <item name="colorSecondary">@color/colorAzulPrimary</item>
        <item name="colorSecondaryVariant">@color/colorAzulSombreado</item>

        <item name="android:colorBackground">@color/colorBlanco</item>
        <item name="colorSurface">@color/colorAzulDarker</item>
        <item name="colorError">@color/md_red_900</item>

        <item name="colorOnPrimary">@color/colorBlanco</item>
        <item name="colorOnSecondary">@color/colorBlanco</item>
        <item name="colorOnError">@color/md_red_900</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar" ns1:ignore="NewApi">false</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>

        <item name="toolbarStyle">@style/Widget.Coppel.Toolbar.PrimarySurface.Blue</item>
        <!--<item name="android:tint">@color/colorAzulDarkCoppel</item>-->

        <item name="actionModeStyle">@style/Widget.Coppel.ActionMode.Blue</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.Coppel.Blue.ActionMode.CloseMode.Light</item>

        <item name="android:tint">@color/colorBlanco</item>

        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_background">@color/colorAzulDark</item>

        <item name="toolbarTheme">@style/ThemeOverlay.Coppel.Toolbar.Blue</item>
        <item name="snackBarTextColor">@color/colorAmarillo</item>

    </style>
    <style name="Theme.Coppel.White" parent="Theme.Coppel">
        <item name="colorPrimary">@color/colorBlanco</item>
        <item name="colorPrimaryVariant">@color/colorAzulDark</item>
        <item name="colorSecondary">@color/colorAzulDark</item>
        <item name="colorSecondaryVariant">@color/colorAzulPrimary</item>

        <item name="android:colorBackground">@color/colorBlanco</item>
        <item name="colorSurface">@color/colorAzulSombreado</item>
        <item name="colorError">@color/md_red_900</item>

        <item name="colorOnPrimary">@color/colorAzulDark</item>
        <item name="colorOnSecondary">@color/colorBlanco</item>
        <item name="colorOnError">@color/md_red_900</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar" ns1:ignore="NewApi">true</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>

        <item name="toolbarStyle">@style/Widget.Coppel.Toolbar.PrimarySurface.White</item>
        <!--        <item name="android:tint">@color/color_azul_dark_coppel</item>-->

        <item name="actionModeStyle">@style/Widget.Coppel.ActionMode.White</item>

        <item name="snackBarTextColor">@color/colorAmarillo</item>
        <item name="toolbarTheme">@style/ThemeOverlay.Coppel.Toolbar.White</item>

        <item name="md_corner_radius">10dp</item>
        <item name="md_color_button_text">@color/colorAzulDark</item>
        <item name="md_font_title">@font/circular_std_bold</item>
        <item name="md_font_body">@font/circular_std_medium</item>
        <item name="md_button_casing">literal</item>
        <item name="md_color_content">@color/colorGrisTexto</item>

    </style>
    <style name="ThemeOverlay.Coppel.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>
    <style name="ThemeOverlay.Coppel.Toolbar.Blue" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/colorBlanco</item>
        <item name="android:textColorHint">@color/colorAzulSombreado</item>
    </style>
    <style name="ThemeOverlay.Coppel.Toolbar.White" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/colorAzulDark</item>
        <item name="android:textColorHint">@color/colorAzulHint</item>
    </style>
    <style name="Widget.Coppel.ActionMode.Blue" parent="Base.Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/Widget.Coppel.ActionMode.Title.Blue</item>
    </style>
    <style name="Widget.Coppel.ActionMode.Title.Blue" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorAzulPrimary</item>
    </style>
    <style name="Widget.Coppel.ActionMode.Title.White" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorAzulDark</item>
    </style>
    <style name="Widget.Coppel.ActionMode.White" parent="Base.Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/Widget.Coppel.ActionMode.Title.White</item>
    </style>
    <style name="Widget.Coppel.Blue.ActionMode.CloseMode.Light" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">?colorAccent</item>
    </style>
    <style name="Widget.Coppel.Button.TextButton.Dialog.White" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAzulDark</item>
    </style>
    <style name="Widget.Coppel.Toolbar.PrimarySurface.Blue" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
    </style>
    <style name="Widget.Coppel.Toolbar.PrimarySurface.White" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:tint">@color/colorAzulDark</item>
    </style>
</resources>